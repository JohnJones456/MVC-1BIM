@model Evento

<style>
    form {
        padding: 10px;
        margin: 10px;
    }

    label {
        display: block;
        margin-top: 10px;
    }

    input[type="text"],
    input[type="number"],
    input[type="date"] {
        width: 100%;
        padding: 5px;
        margin-top: 5px;
        box-sizing: border-box;
    }

    .botoes {
        margin-top: 15px;
    }

        .botoes button,
        .botoes a {
            display: inline-block;
            padding: 8px 12px;
            margin-right: 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            font-size: 14px;
            cursor: pointer;
        }

        .botoes button {
            background-color: #007bff;
            color: white;
        }

            .botoes button:hover {
                background-color: #0056b3;
            }

        .botoes a {
            background-color: #dc3545;
            color: white;
        }

            .botoes a:hover {
                background-color: #a71d2a;
            }
</style>

<h2>Editar Evento</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Nome:</label>
    <input type="text" name="Nome" value="@Model.Nome" required />

    <label>Local:</label>
    <input type="text" name="Local" value="@Model.Local" required />

    <label>Preço:</label>
    <input type="number" step="0.01" name="Preco" value="@Model.Preco" required />

    <label>Data:</label>
    <input type="date" name="Data" value="@Model.Data.ToString("yyyy-MM-dd")" required />

    <div class="botoes">
        <button type="submit">Salvar</button>
        <a href="@Url.Action("Index", "Evento")">Voltar</a>
    </div>
</form>
